<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-fixed-top" style="background-color: #ededed">
      <a class="navbar-brand" href="#"><%= image_tag("ewb-sfp-logo.png", height:"32") %></a>
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to("Home", root_path, class:"nav-link") %></a>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to("Profile", user_path(current_user), class:"nav-link") %></a>
          </li>
          <li class="nav-item">
            <%= link_to("Project Listings", projects_path, class:"nav-link") %></a>
          </li>
          <li class="nav-item">
            <%= link_to("Event Listings", events_path, class:"nav-link") %></a>
          </li>
          <li class="nav-item" style="float: right;">
            <%= link_to("Logout", destroy_user_session_path, method: :delete, class:"nav-link") %></a>
          </li>
          <li class="nav-item" style="float: right;">
            <div class="nav-link">Signed in as <strong><%= current_user.email %></strong></div>
          </li>
        <% else %>
        <li class="nav-item" style="float: right;">
          <%= link_to("Login", user_session_path, class:"nav-link") %></a>
        </li>
        <% end %> 
      </ul>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
    
    <div class="container">
      <div class="row">
        <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="alert alert-warning"><%= alert %></p>
        <% end %>
        <% if flash[:warning] %>
        <p class="alert alert-danger"><%= flash[:warning] %></p>
        <% end %>
      </div>
    </div>
  </body>
</html>