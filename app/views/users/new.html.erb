<div class="row user-form" id="signup-form">
  <div class="col-md-8 col-md-offset-2"> 
  <h1>Account Signup</h1>
  <p class="text-dark-grey">Register if you are interested in volunteering for Engineering Without Borders projects.</p>


    <%= form_for(@user) do |f| %>
      <div class="user-form-box">
        <%= f.label :name, class: "user-form-label"%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="user-form-box">
        <%= f.label :email, class: "user-form-label" %>
        <%= f.email_field :email, class: 'form-control'  %>
      </div>
      <div class="user-form-box">
        <%= f.label :password, class: "user-form-label" %>
        <%= f.password_field :password, class: 'form-control'  %>
      </div>

      <div class="user-form-box">
        <%= f.label :password_confirmation, "Confirmation", class: "user-form-label" %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </div>

      <%= f.submit "Create my account", class: "btn btn-info" %>
    <% end %>
  </div>
</div>