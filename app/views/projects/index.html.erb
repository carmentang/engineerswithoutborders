<h1>Listing Projects</h1>

<% if can? :manage, @project %>
  <p><%= link_to "New Project", new_project_path %></p>
<% end %>

<hr>
<ul>
<% @projects.each do |project| %>
<li>
  <h4><a href="<%= project_path(project.id) %>" ><%= project.name %></a></h4>
  <p><%= project.description %><p>
  </p>
  </p>
 </li>
<% end %>
<ul>

<%= paginate @projects %>