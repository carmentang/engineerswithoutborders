<h2>Project Information</h2>
<p><%= link_to "Create New Event", new_event_path %></p>
<div class="row">
	<%= image_tag @project.image.url(:medium) %>
	
	<div class="col-lg-12">
		<h4><%= @project.name %></h4>
	</div>
	<div class="col-lg-12">
		<p><%= @project.description %></p>
	</div>
	<div class="col-lg-12">
		<p>This project will start on <%= @project.start_date.to_date %>.</p>
	</div>
	
	<div class="col-md-6">
		<strong>Location: </strong>
		<%= @project.location %>
	</div>
	<div class="col-md-6">
		<p> Has <strong><%= @project.volunteers %></strong> volunteers, needs <strong><%= @project.volunteer_capacity - @project.volunteers %></strong> more!</p>
	</div>
	
	
	<h2>Upcoming Events</h2>
	<div class="col-lg-12">
		
		
	</div>
</div>








<% if can? :manage, @project %>
	<%= link_to 'Edit', edit_project_path(@project) %> 
<% end %>
