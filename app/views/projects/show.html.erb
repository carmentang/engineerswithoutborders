<h2>Project Information</h2>
<p><%= link_to "Create New Event", new_event_path, class: "btn btn-md btn-success" %></p>
<div class="row">
	<%= image_tag @project.image.url(:medium) %>

  <br><br>

	<div class="col-lg-12">
		<h4><%= @project.name %></h4>
	</div>
	<div class="col-lg-12">
		<p><%= @project.description %></p>
	</div>
	<div class="col-lg-12">
		<p>This project will start on <%= @project.start_date.to_date %>.</p>
	</div>
	
	<div class="col-md-6">
		<strong>Location: </strong>
		<%= @project.location %>
	</div>
	<div class="col-md-6">
		<p> Has <strong><%= @project.volunteers %></strong> volunteers, needs <strong><%= @project.volunteer_capacity - @project.volunteers %></strong> more!</p>
	</div>
	
	<h2>Upcoming Events</h2>
	<div class="col-lg-12">
	    <ul>
	        <% @all_events.each do |event| %>
	        	<% if event.project_id == @project.id %>
	        		<li><%= link_to event.name, event %></li>
	        	<% end %>
	        <% end %>	
	    </ul>
	</div>
</div>

<% if can? :manage, @project %>
	  <%= link_to 'Edit Project', edit_project_path(@project), class: "btn btn-md btn-primary" %> |
    <%= link_to 'Home', root_path, class: "btn btn-md btn-primary" %>
<% else %>
    <%= link_to 'Home', root_path, class: "btn btn-md btn-primary" %>
<% end %>
<br>
<br>
